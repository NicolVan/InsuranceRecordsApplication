@model IEnumerable<InsuranceApp.Models.InsuranceParticipant>

@{
    ViewData["Title"] = "Insurance Participant";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<h1>@ViewData["Title"]</h1>

<form method="get" asp-action="Index">
    <div class="form-group">
        <label>Insurance</label>
        <select name="insuranceId" class="form-control" asp-items="ViewBag.InsuranceId">
            <option value="">-- ALL --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Role</label>
        <select name="role" class="form-control" asp-items="ViewBag.RoleList">
            <option value="">-- ALL --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-1">Filter</button>
</form>
<hr />
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-file-earmark-plus"></i></a>
</div>
<table class="table table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Role</th>
            <th>Insurance</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Role</td>
                <td>@item.InsuredPerson.FullName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detail</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
