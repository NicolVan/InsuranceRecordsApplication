@model IEnumerable<InsuranceApp.Models.InsuranceClaim>

@{
    ViewData["Title"] = "Incidents";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<h1>@ViewData["Title"]</h1>

<table class="table table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Occurred On</th>
            <th>Estimated Damage (€)</th>
            <th>Insurance</th>
            <th>Insured Person</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OccurredOn</td>
                <td>@item.EstimatedDamage</td>
                <td>@item.Insurance?.InsuranceName</td>
                <td>@item.InsuredPerson.FullName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detail</a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Agent"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>