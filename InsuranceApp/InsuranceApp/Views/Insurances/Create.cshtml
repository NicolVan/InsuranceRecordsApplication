@using InsuranceApp.ViewModel
@model InsuranceCreateEditViewModel

@{
    ViewData["Title"] = "Add Insurance";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        @Html.LabelFor(m => m.PolicyHolderId)
        @Html.DropDownListFor(m => m.PolicyHolderId, Model.PossiblePersons, "Choose a policy holder person", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PolicyHolderId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.InsuredPersonIds, Model.PossiblePersons)
        @Html.DropDownListFor(m => m.InsuredPersonIds, Model.PossiblePersons, "Select a insured person", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label asp-for="InsuranceName" class="control-label"></label>
        <input asp-for="InsuranceName" class="form-control" />
        <span asp-validation-for="InsuranceName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SubjectName" class="control-label"></label>
        <input asp-for="SubjectName" class="form-control" />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="From" class="control-label"></label>
        <input asp-for="From" class="form-control" />
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="To" class="control-label"></label>
        <input asp-for="To" class="form-control" />
        <span asp-validation-for="To" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="InsuredPersonId" />
        <p>Poistenec: @ViewData["InsuredPersonName"]</p>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-4 ms-2">Back</a>
</form>